{
	"root": true,
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "script"
	},
	"extends": ["eslint:recommended"],
	"plugins": [],
	"env": {
		"browser": true,
		"es2024": true,
		"jquery": true
	},
	"globals": {
		"_args": "readonly",
		"_contents": "readonly",
		"clone": "readonly",
		"either": "readonly",
		"forget": "readonly",
		"hasVisited": "readonly",
		"importScripts": "readonly",
		"importStyles": "readonly",
		"l10nStrings": "readonly",
		"lastVisited": "readonly",
		"memorize": "readonly",
		"passage": "readonly",
		"previous": "readonly",
		"random": "readonly",
		"randomFloat": "readonly",
		"recall": "readonly",
		"setPageElement": "readonly",
		"settings": "readonly",
		"setup": "readonly",
		"tags": "readonly",
		"temporary": "readonly",
		"time": "readonly",
		"turns": "readonly",
		"variables": "readonly",
		"visited": "readonly",
		"visitedTags": "readonly",
		"Config": "readonly",
		"Dialog": "readonly",
		"Engine": "readonly",
		"Fullscreen": "readonly",
		"LoadScreen": "readonly",
		"Macro": "readonly",
		"Passage": "readonly",
		"Save": "readonly",
		"Setting": "readonly",
		"SimpleAudio": "readonly",
		"State": "readonly",
		"Story": "readonly",
		"Template": "readonly",
		"UI": "readonly",
		"UIBar": "readonly",
		"SugarCube": "readonly",
		"Wikifier": "readonly"
	},
	"reportUnusedDisableDirectives": true,
	"rules": {
		// makes sub-tab-size alignment impossible
		"no-mixed-spaces-and-tabs": "off"
	}
}
