}

@keyframes eldritchPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); filter: blur(1px);}
  100% { transform: scale(1); }
}

:not(.accessible *) {
	.elder-entity& {
	  font-family: 'Cinzel', serif;
